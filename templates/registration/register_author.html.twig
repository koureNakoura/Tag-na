{% extends 'base.html.twig' %}

{% block metaDescription %}Vous avez des articles? Nous nous chargeons de les publier!{% endblock %}
{% block title %}Taggast | Devenir auteur du Blog{% endblock %}

{% block body %}
<div class="container my-auto">
    <div class="text-center">
        <h1>Rejoignez notre équipe de redacteurs</h1>
       
    </div>
    {% if app.user %}
        <div class="m-5 text-center">
            Vous êtes connecté avec l'adresse {{ app.user.username }}, <a class="fw-bold" href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% else %}
        <div class="border mx-auto my-5 col-md-6 rounded-3 bg-light-green">
            <div class="m-5">
                <h3 class="text-center">Devenir auteur</h3>
                {{ form(registrationAuthorForm) }}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
